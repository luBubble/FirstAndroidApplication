<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowColor</item>
    </style>
    <style name="normal_text">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="grade_text">
        <item name="android:textColor">@color/grade_red</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 圆形ImageView -->
    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color" />
    </declare-styleable>
</resources>

