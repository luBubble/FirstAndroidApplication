<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowColor"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <com.zl.tesseract.scanner.more.RoundImageView
            android:id="@+id/student_pic"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/img"/>
        <TextView
            android:id="@+id/student_name"
            style="@style/normal_text"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="陈同学"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/student_school"
            style="@style/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="中南光明小学"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="5dp"
            android:drawableRight="@mipmap/can_click" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shallowGray"/>
</LinearLayout>