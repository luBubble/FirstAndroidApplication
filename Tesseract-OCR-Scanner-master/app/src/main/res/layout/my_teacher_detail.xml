<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowColor"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/no_menu_frame_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d4f2ae"
            android:elevation="3dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">
            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:paddingRight="20dp"
                android:drawableRight="@mipmap/back_two" />
            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="老师详情"
                android:textColor="@color/deepGreenColor"
                android:textSize="18sp" />

        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowColor"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp">

        <com.zl.tesseract.scanner.more.RoundImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@mipmap/t0"/>

        <TextView
            android:id="@+id/user_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="刘苇苇"
            android:textColor="@color/greenGrayColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/user_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="20180423095621"
            android:textColor="@color/greenGrayColor"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/greenGrayColor"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/school"
                android:textColor="@color/greenGrayColor"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/user_msg_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="中南光明小学"
                android:textColor="@color/greenGrayColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/phone"
                android:textColor="@color/greenGrayColor"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/user_msg_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="13277089625"
                android:textColor="@color/greenGrayColor"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/user_description"
                android:textColor="@color/greenGrayColor"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/user_msg_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="三年二班的数学老师"
                android:textColor="@color/greenGrayColor"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>